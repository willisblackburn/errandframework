<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Errand Web Framework (Trivial Example)</display-name>

    <servlet>
        <description>Handles all Errand requests</description>
        <display-name>Trivial Example Servlet</display-name>
        <servlet-name>trivialExampleServlet</servlet-name>
        <servlet-class>org.errandframework.examples.trivial.TrivialExampleServlet</servlet-class>
        <async-supported>true</async-supported>
        <multipart-config/>
    </servlet>
    <servlet-mapping>
        <servlet-name>trivialExampleServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>
